  style.
    body {
    margin: 0%;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    font-family: 'Catamaran', sans-serif;
    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#b5bdc8+0,828c95+89,828c95+93,28343b+100 */
    background: #b5bdc8; /* Old browsers */
    background: -moz-linear-gradient(left, #b5bdc8 0%, #828c95 89%, #828c95 93%, #28343b 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(left, #b5bdc8 0%,#828c95 89%,#828c95 93%,#28343b 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to right, #b5bdc8 0%,#828c95 89%,#828c95 93%,#28343b 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b5bdc8', endColorstr='#28343b',GradientType=1 ); /* IE6-9 */
    color: #002066;
    height: 100%;
    }
    h2{
    font-size: 25px;
    }
    .address>p{
    font-size: 20px;
    }
    #map {
    height: 320px;
    width: 60%;
    }
    footer {
    bottom: 0%;
    text-align: center;
    padding: 5px;
    margin-top: 10px;
    flex-shrink: 0;
    background-color: lightblue;
    }
    .form-row{
    margin: 17px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    }
    .form-row input,textarea, select{
    color: #002066;
    border-color: #002066;
    flex: 13;
    max-width: 45%;
    padding: 10px;
    }
    .form-row select{
    max-width: 47.5%;
    }
    #submit-button{
    max-width: 46.5%;
    flex: 5;
    padding: 15px;
    border: none;
    background: #002066;
    color: white;
    text-transform: uppercase;
    letter-spacing: .09em;
    border-radius: 2px;
    }
    .form-row > label {
    padding: .5em 1em .5em 0;
    flex: 1 0 10px;
    max-width: 120px;
    }
    section {
    flex: 1 0 auto;
    float: left;
    }
    .contact{
    margin: 20px;
    flex: 90%;
    }
    .star{
    margin: 17px;
    }
    .address{
    margin: 17px;
    flex: 10%;
    align-self: center;
    }
    .content{
    display: flex;
    }
