  section
    .contact
      img(src='http://graymarketingandpr.com/wp-content/uploads/2015/11/flat_seo2-18-512.png' alt='Developers working on a new project' width='150')
      h1 Contact Us!
    form(method='post' action='form.html')
      .form-row
        label(for='name') Name:*
        input#name(pattern='^[a-zA-Z]+$' type='text' name='name' value='' placeholder='John Doe' required='required' autofocus='autofocus')
      .form-row
        label(for='email') Email Address:*
        input#email(type='email' name='email' value='' placeholder='johndoe@example.com' required='required')
      .form-row
        label(for='telephone') Telephone: 
        input#telephone(pattern='^(?:0|\(?\+33\)?\s?|0033\s?)[1-79](?:[\.\-\s]?\d\d){4}$' type='tel' name='telephone' value='')
      .form-row
        label(for='enquiry') Enquiry: 
        select#enquiry(name='enquiry')
          option(value='general') General
          option(value='Cookers') Cookers
          option(value='Clients') Clients
      .form-row
        label(for='message') Message:* 
        textarea#message(name='message' placeholder='Your message must be greater than 20 charcters' required='required' data-minlength='20')
      div
        p.star  * indicates a required field
      .form-row
        input#submit-button(type='button' value='Send a message')
